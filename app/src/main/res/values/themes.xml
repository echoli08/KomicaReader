<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.KomicaReader" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="actionBarSize">48dp</item>
    </style>

    <style name="Widget.KomicaReader.SlideshowControlButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/bg_slideshow_control</item>
        <item name="android:padding">6dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@android:color/white</item>
    </style>
</resources>
